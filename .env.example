# ============================================
# MultiForms Environment Variables
# ============================================
# 复制此文件为 .env.local 并填入实际值
# 本地开发使用 .env.local
# Vercel 部署在 Dashboard 中配置这些变量

# ============================================
# Supabase Configuration
# ============================================
# Supabase 项目 URL（必需）
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase 匿名密钥（必需，客户端可访问）
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase 服务密钥（仅服务端，谨慎使用）
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# Application Configuration
# ============================================
# 应用 URL（用于 OAuth 回调和生成链接）
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 应用名称
NEXT_PUBLIC_APP_NAME=MultiForms

# ============================================
# OAuth Provider Configuration (可选)
# ============================================
# GitHub OAuth (在 Supabase Dashboard 中配置)
# NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id

# Google OAuth (在 Supabase Dashboard 中配置)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# ============================================
# Feature Flags (可选)
# ============================================
# 启用分析
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# 启用错误追踪
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# ============================================
# Storage Configuration (可选)
# ============================================
# 最大文件上传大小（字节）
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# 允许的文件类型
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx

# ============================================
# Email Configuration (可选，用于 Supabase Auth)
# ============================================
# SMTP 设置（在 Supabase Dashboard 中配置）
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=587
# SMTP_USER=resend
# SMTP_PASSWORD=your-smtp-password
# SMTP_SENDER=noreply@yourdomain.com

# ============================================
# Rate Limiting (可选)
# ============================================
# API 速率限制（请求/分钟）
NEXT_PUBLIC_RATE_LIMIT=60

# ============================================
# Rate Limiting (可选)
# ============================================
# API 速率限制（请求/分钟）
NEXT_PUBLIC_RATE_LIMIT=60

# ============================================
# AI Analysis Configuration (可选)
# ============================================
# 智谱 GLM (BigModel) API Key - 用于表单提交的 AI 分析
# 获取地址：https://open.bigmodel.cn/usercenter/apikeys
# 格式：id.secret
BIGMODEL_API_KEY=

# GLM 模型选择（可选，默认：glm-4-flash）
# 可选值：glm-4-flash（快速免费）, glm-4-air（性价比）, glm-4-plus（最强）
BIGMODEL_MODEL=glm-4-flash

# ============================================
# Deployment Environment
# ============================================
# 环境：development | staging | production
NODE_ENV=development
